% Some command aliases
\newcommand{\hide}[1]{}%{#1}}
\newcommand{\smallnode}[1]{{\footnotesize #1}}

\newcommand{\prog}[1]{\textup{\texttt{{#1}}}}
\newcommand{\fun}[1]{\mathtt{{#1}}}
\newcommand{\cmd}[1]{\textup{\textmd{{#1}}}}
\newcommand{\TT}{\mathtt{true}}
\newcommand{\FF}{\mathtt{false}}
\newcommand{\assert}[1]{(\!| {#1} |\!)}

\newcommand{\method}[1]{\textup{\textsc{#1}}}

% Environments 
\newtheorem{theorem}{Theorem}[chapter]
\newtheorem{lemma}[theorem]{Lemma}
\newtheorem{proposition}[theorem]{Proposition}
\newtheorem{corollary}[theorem]{Corollary}
